<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#D18084" />
            <corners android:radius="11dp" />
            <solid android:color="#D18084" />
            <size android:width="300dp" android:height="45dp" />

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/pt_light_pink" />
            <corners android:radius="11dp" />
            <solid android:color="@color/pt_light_pink" />
            <size android:width="300dp" android:height="45dp" />

        </shape>
    </item>
</selector>
