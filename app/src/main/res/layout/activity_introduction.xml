<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_wedding"
    tools:context=".presentation.view.wedding.introduction.IntroductionActivity">

    <ImageView
      android:id="@+id/img_celebration"
      android:layout_width="250dp"
      android:layout_height="250dp"
      android:layout_marginTop="80dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/endless_happy_image" />

    <TextView
      android:id="@+id/txt_introduction"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:text="신랑 신부의  특별한 순간을 기록하고 관리하는 도구입니다."
      android:textAlignment="center"
      android:textColor="@color/tx_dark_gray"
      app:layout_constraintBottom_toTopOf="@id/txt_introduction2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

    <TextView
      android:id="@+id/txt_introduction2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="50dp"
      android:text="하객들의 참여 목록, 축의금 내역 등을 한 곳에서 효과적으로 관리할 수 있습니다."
      android:textAlignment="center"
      android:textColor="@color/tx_dark_gray"
      app:layout_constraintBottom_toTopOf="@id/txt_introduction3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

    <TextView
      android:id="@+id/txt_introduction3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="50dp"
      android:text="이 앱이 여러분의 결혼식을 더욱 특별하게 만들어 드릴 것입니다."
      android:textAlignment="center"
      android:textColor="@color/tx_dark_gray"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

    <ImageView
      android:id="@+id/btn_next"
      android:layout_width="30dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="250dp"
      android:layout_marginEnd="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:srcCompat="@drawable/next_arrow_white" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
