<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:background="@drawable/square_white_box"
      tools:ignore="MissingConstraints" />
    <TextView
      android:id="@+id/txt_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="잠깐! 내 코드를 복사해주세요"
      android:textColor="@color/tx_gray"
      android:fontFamily="@font/spoqa_bold"
      android:textSize="@dimen/font_medium"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
    <TextView
      android:id="@+id/txt_code"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="1Q2r3T5TY"
      android:textColor="@color/tx_gray"
      android:textSize="@dimen/font_larger"
      android:fontFamily="@font/spoqa_regular"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_desc" />

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_copy_code"
      style="@style/ButtonStyle"
      android:layout_width="260dp"
      android:layout_height="wrap_content"
      android:background="@drawable/square_pink_btn"
      android:layout_marginTop="60dp"
      android:text="눌러서 복사하기"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_desc" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
