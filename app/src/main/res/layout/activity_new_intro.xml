<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="start"
    android:orientation="vertical"
    tools:context=".presentation.view.wedding.introduction.NewIntroActivity">
    <LinearLayout
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="105dp"
      android:layout_marginLeft="60dp"
      android:layout_marginRight="60dp"
      android:gravity="center"
      android:orientation="vertical">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_bold"
        android:gravity="start"
        android:text="결혼을 진심으로\n축하합니다."
        android:textColor="@color/tx_gray"
        android:textFontWeight="100"
        android:textSize="@dimen/font_largest" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="start"
        android:paddingTop="10dp"
        android:fontFamily="@font/tossfacefont"
        android:gravity="start"
        android:text="@string/emoji_wedding"
        android:textFontWeight="100"
        android:textSize="@dimen/font_largest" />
    </LinearLayout>
  </LinearLayout>

</layout>
