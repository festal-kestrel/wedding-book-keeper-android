<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
      android:id="@+id/txt_connect_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      android:text="배우자를 연결하세요" />
    <ImageView
      android:id="@+id/img_partner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      tools:srcCompat="@tools:sample/avatars" />
    <TextView
      android:id="@+id/txt_code_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:text="나의 코드 복사" />
    <TextView
      android:id="@+id/txt_code"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:singleLine="true"
      android:text="1uwws9ri6" />
    <Button
      android:id="@+id/btn_partner_connect"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:text="상대방 코드로 연결하기" />
    <TextView
      android:id="@+id/txt_admin_link"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:text="결혼식 관리자이신가요?" />

  </LinearLayout>

</layout>
