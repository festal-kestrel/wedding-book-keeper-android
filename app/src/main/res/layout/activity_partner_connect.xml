<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal">
    <ImageView
      android:id="@+id/img_partner"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginTop="100dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/txt_connect_desc"
      app:srcCompat="@drawable/single_source" />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="30dp"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="30dp">

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_go_back"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:background="@drawable/back_arrow" />
    </LinearLayout>

    <TextView
      android:id="@+id/txt_connect_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="105dp"
      android:layout_marginLeft="60dp"
      android:layout_marginRight="60dp"
      android:fontFamily="@font/spoqa_bold"
      android:text="배우자와\n연결하세요"
      android:textColor="@color/tx_gray"
      android:textSize="@dimen/font_largest"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/txt_code_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:fontFamily="@font/spoqa_regular"
      android:text="눌러서 나의 코드 복사하기"
      android:textColor="@color/tx_gray"
      android:textSize="@dimen/font_medium"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/img_partner" />

    <TextView
      android:id="@+id/txt_code"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="1uwws9ri6"
      android:textColor="@color/tx_dark_gray"
      android:textSize="@dimen/font_larger"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/txt_code_desc" />

    <TextView
      android:id="@+id/txt_enter_main_page"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:fontFamily="@font/spoqa_regular"
      android:text="이미 결혼식을 생성했어요..."
      android:textAlignment="center"
      android:textSize="@dimen/font_small"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_next" />

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_next"
      style="@style/ButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="130dp"
      android:background="@drawable/square_pink_btn"
      android:inputType="none"
      android:text="눌러서 결혼식 생성하기"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_partner_register"
      style="@style/ButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="190dp"
      android:background="@drawable/square_white_btn"
      android:inputType="none"
      android:text="상대방 코드로 연결하기"
      android:textColor="@color/tx_light_gray"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
